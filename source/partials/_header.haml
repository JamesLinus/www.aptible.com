- class_modifiers = '' if class_modifiers.blank?
- subtitle = '' if subtitle.blank?
- title = 'Aptible' if title.blank?
%header.aptible-header{ class: class_modifiers }
  .grid-container
    = partial 'partials/main-nav', locals: {      |
        nav_items: 'partials/support/nav-items',  |
        section_title: 'UI Kit',                  |
        section_url: '/ui-kit'                    |
      }                                           |

  .grid-container
    - unless subtitle.blank?
      %h2.heading__subtitle= subtitle
    - unless title.blank?
      %h1.heading__title= title
