- titles = ["HIPAA Compliance for Developers: Getting Started", "What is a HIPAA BAA?", "Gridiron Reference Documents"]
.resources-footer
  .grid-container
    %header.resources-footer__header
      %h2.resources-footer__header__title Learn More
      %p.resources-footer__header__summary
        We publish free research and guidance to help technology organizations
        navigate security and compliance.

  .grid-container
    .grid--3up-flex
      - resources_by_title(titles).each do |r|
        %a.grid-item.card.card--on-dark{ href: resource_url(r) }
          .card__header
            .card__subtitle.card__subitle--on-dark= r.category
            %h3.card__title.card__title--on-dark= r.title
          %p.card__body.card__body--on-dark= r.snippet
