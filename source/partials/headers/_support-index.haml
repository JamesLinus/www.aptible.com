%header.aptible-header.hero-gradient--angled
  = partial 'partials/main-nav', locals: {      |
      nav_items: 'partials/support/nav-items',  |
      section_title: 'Support',                 |
      section_url: '/support'                   |
    }                                           |

  .grid-container
    %h1.heading__title--centered= current_page.data.header_title || 'Aptible Support'
    %h2.heading__subtitle--centered= current_page.data.header_subtitle || 'How can we help?'
    - if current_page.data.header_search
      .search-bar
        .search-bar-input
          .input-group
            %form#search-form{ action: '/support/search/', method: 'GET' }
              %input#swifttype-search-input.form-control{ name: 'search', placeholder: 'Search Documentation, Support, and Quickstart guides', type: 'text' }
              %button.input-group-addon{ type: 'submit' }
                %i.fa.fa-search
