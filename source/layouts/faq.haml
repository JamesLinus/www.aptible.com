- content_for :header do
  %header.aptible-header.hero-gradient--angled.aptible-header--single-grid
    = partial 'partials/main-nav', locals: { |
        section_title: 'FAQ',                |
        section_url: '/faq'                  |
      }                                      |
    .grid-container
      %h1.heading__title--centered Frequently Asked Questions

= wrap_layout :layout do
  .content
    .grid-container.grid-aside--left
      .grid-aside
        %nav.side-nav
          %a.side-nav__item{ href: "#company" } Company
          %a.side-nav__item{ href: "#compliance" } Compliance
          %a.side-nav__item{ href: "#glossary" } Glossary
          %a.side-nav__item{ href: "#pricing" } Pricing
          %a.side-nav__item{ href: "#platform" } Technology Platform

      .grid-document.markdown-content.faq
        = find_and_preserve do
          = yield

  = partial 'partials/resources-footer'
