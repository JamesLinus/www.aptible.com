- content_for :header do
  = partial 'partials/ui-kit-header'

.content
  .grid-container.grid--4up
    - current_page.data.colors.each do |color|
      %div{:class => "grid-item card #{"#{color}-bg"}"}
        %heading
          = color.gsub('-', ' ').capitalize
  .grid-container
    %h1.headline--xxl Gradients
  .grid-container.grid--2up
    .grid-item.card.hero-gradient
      %heading
        Hero Gradient
    .grid-item.card.hero-gradient--angled
      %heading
        Hero Gradient Angled
