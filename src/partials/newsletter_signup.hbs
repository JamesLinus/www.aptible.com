 <form class="newsletter-signup">
  <div class="row message success">
    <div class="alert alert-success col-sm-8 col-sm-offset-2">
      {{newsletter.success}}
    </div>
  </div>

  <div class="row message danger">
    <div class="alert alert-danger col-sm-8 col-sm-offset-2">
      {{newsletter.error}}
    </div>
  </div>

  <div class="row form-fields">
    <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-1">
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">{{fa 'envelope'}}</span>
          <input type="text" name="email" class="form-control" placeholder="{{newsletter.placeholder}}">
        </div>
      </div>
    </div>
    <div class="col-sm-10 col-sm-offset-1 col-md-4 col-md-offset-0">
      <button type="submit" class="btn btn-primary btn-lg btn-block">{{newsletter.submit}}</button>
    </div>
  </div>
</form>